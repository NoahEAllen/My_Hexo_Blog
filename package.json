{
  "name": "hexo-blog",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "hexo": "7.0.0",
    "hexo-cli": "4.3.2",
    "hexo-generator-archive": "2.0.0",
    "hexo-generator-category": "2.0.0",
    "hexo-generator-index": "3.0.0",
    "hexo-generator-tag": "2.0.0",
    "hexo-renderer-ejs": "2.0.0",
    "hexo-renderer-marked": "6.0.0",
    "hexo-renderer-stylus": "3.0.0",
    "hexo-server": "3.0.0"
  },
"scripts": {
  "build": "node build.js",
  "clean": "node -e \"const Hexo=require('hexo');new Hexo(__dirname).init().then(h=>h.call('clean').then(()=>h.exit()))\"",
  "generate": "node -e \"const Hexo=require('hexo');new Hexo(__dirname).init().then(h=>h.call('generate').then(()=>h.exit()))\"",
  "start": "node -e \"const Hexo=require('hexo');new Hexo(__dirname).init().then(h=>h.call('server').then(()=>h.exit()))\""
},
"engines": {
    "node": ">=18.x <=24.x"
  }
}
